---
- name: Stop docker-compose
  hosts: all
  tasks:
    - name: Stop docker-compose
      ansible.builtin.command:
        cmd: docker compose down
        chdir: "{{ compose_dir }}"
      register: docker_compose_output
    - name: Debug stderr
      ansible.builtin.debug:
        msg: "{{ docker_compose_output.stderr_lines }}"
    - name: Debug stdout
      ansible.builtin.debug:
        msg: "{{ docker_compose_output.stdout_lines }}"
